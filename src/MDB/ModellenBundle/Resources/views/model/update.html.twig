{%extends 'MDBModellenBundle:Model:base.html.twig'%}
{%block title%}Model update{%endblock%}
{%block content%}

  {%if form is defined%}

    <div id="create_form">
      {{form_start(form)}}
      <div id="persoonlijkeGegevens">
        <h3>Persoonlijke Gegevens</h3>
        {#persoonlijek gegevens#}    
        {{form_row(form.voornaam)}}{{form_row(form.naam)}}
        {{form_row(form.nicknaam)}}
        {{form_row(form.geboortedatum)}}
        {#adresgegevens#}
        {{form_row(form.adres)}}
      </div>
      <div id="contactInfo">
        <h3>Contact Informatie</h3>
        {#contactgegevens#}
        {{form_row(form.gsm)}}
        {{form_row(form.email)}}
        {{form_row(form.website)}}
      </div>
      <div id="uiterlijkeKenmerken">
        <h3>Uiterlijke Kenmerken</h3>
        {#uiterlijke kenmerken#}
        {{form_row(form.haarkleur)}}
        {{form_row(form.oogkleur)}}
        {{form_row(form.lengte)}}
        {{form_row(form.gewicht)}}
        {{form_row(form.confectiemaat)}}
        {{form_row(form.cupmaat)}}
        {{form_row(form.borstomtrek)}}
        {{form_row(form.taille)}}
        {{form_row(form.heup)}}
        {{form_row(form.schoenmaat)}}
      </div>
      <div id="fotoshootOpties">
        <h3>In welke soorten fotografie bent u geinteresseerd?</h3>
        {{form_row(form.fashion)}}
        {{form_row(form.lingerie)}}
        {{form_row(form.badkledij)}}
        {{form_row(form.glamour)}}
        {{form_row(form.topless)}}
        {{form_row(form.bedektTopless)}}
        {{form_row(form.naakt)}}
        {{form_row(form.bedektNaakt)}}
        {{form_row(form.onherkenbaarNaakt)}}
        {{form_row(form.artistiekNaakt)}}
        {{form_row(form.bodypaint)}}
      </div>
      <div id="magazines">
        <h3>In welke magazines ben u geinteresseerd?</h3>
        {{form_row(form.pmagazine)}}
        {{form_row(form.che)}}
        {{form_row(form.menzo)}}
        {{form_row(form.clint)}}
        {{form_row(form.andereMagazines)}}
        {{form_row(form.andereMagazinesOmschrijving)}}
      </div>
      <div id="extraInfo">
        <h3>Heeft u al ervaring?</h3>
        {##ervaring en fotos#}
        {{form_row(form.ervaring)}}
        {{form_row(form.ervaringOmschrijving)}}
      </div>
      {%if fotos is defined%}
        <h3>Reeds Geuploade Fotos</h3>
        <div id="geuploadeFotos">
          <div class="imgHolder modelItemCycle">
            {%for foto in fotos%}
              <img src="../../uploads/documents/{{foto.path}}">
            {%endfor%}
          </div>
        </div>
      {%endif%}
      <div id="fotoUpload">
        <h3>Fotos uploaden</h3>
        {{form_row(form.fotos)}}
      </div>
    </div>
    {{form_end(form)}}
  {%endif%}

  
  
  
  {%if errors is defined%}
    {%for error in errors%}
      {{error.message}}
    {%endfor%}
  {%endif%}
{%endblock%}
